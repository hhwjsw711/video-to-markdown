{
  "name": "video-to-markdown",
  "private": true,
  "version": "1.0.0",
  "description": "Transform YouTube videos into beautiful markdown code with thumbnails. Perfect for documentation, READMEs, and blog posts.",
  "keywords": [
    "video",
    "markdown",
    "youtube",
    "documentation",
    "readme",
    "converter"
  ],
  "author": "Video to Markdown",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n frontend,backend -c blue,magenta \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:ts": "tsc -b --watch",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "predev": "convex dev --until-success && convex dashboard",
    "build": "tsc -b && vite build",
    "lint": "tsc && eslint .  --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@convex-dev/r2": "^0.9.1",
    "@mantine/core": "^8.3.15",
    "@mantine/hooks": "^8.3.15",
    "@mantine/notifications": "^8.3.15",
    "convex": "^1.32.0",
    "fluent-convex": "^0.12.3",
    "jimp": "^1.6.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "type-route": "^1.1.0"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "convex-test": "^0.0.41",
    "eslint": "^10.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
